@{
    ViewBag.Title = "Patients";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Patient ID</td>
            <td>Patient Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var patient in ViewBag.PatientList)
        {
            <tr>
                <td>@patient.PatientId</td>
                <td>@patient.Name</td>
                <td>@patient.DateOfAdmission</td>
                <td> 
                    @Html.ActionLink("Details of the Person", "Contact", "Home", new { patientDetail = patient.PatientId },null)
                </td>



            </tr>
        }
    </tbody>
</table>
