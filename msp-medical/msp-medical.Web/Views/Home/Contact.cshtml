        {

            @Html.Label("Patient Id")
            <span> : @patient.PatientId </span>


            <br>
            @Html.Label("Name")
            <span> : @patient.Name </span>

            <br>
            @Html.Label("Date of Admission")
            <span> : @patient.DateOfAdmission </span>

            <br>
            @Html.Label("Gender")
            <span> : @patient.Sex </span>

            <br>
            @Html.Label("Age")
            <span> : @patient.Age </span>

            <br>
            @Html.Label("Marital Status")
            <span> : @patient.MaritalStatus </span>


            <br>
            @Html.Label("Address")
            <span> : @patient.Address </span>

            <br>
            @Html.Label("Contact Number")
            <span> : @patient.ContactNumber </span>

            <br>
            @Html.Label("Description of patients concern")
            <span> : @patient.Description</span>

            <br>
            @Html.Label("Relieving Factors")
            <span> : @patient.RelievingFactors </span>

            <br>
            @Html.Label("Timing")
            <span> : @patient.Timing </span>


            <br>
            @Html.Label("Medications")
            <span> : @patient.Medications </span>

            <br>
            @Html.Label("Previous Hospitalization")
            <span> : @patient.PreviousHospitalization </span>

            <br>
            @Html.Label("Medications Taken")
